# PASSTHROUGH MODE #
mode  "Passthrough" {
	bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 2%+ && pkill -RTMIN+10 i3blocks
	bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master unmute 2%- && pkill -RTMIN+10 i3blocks
	bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master toggle &&  pkill -RTMIN+10 i3blocks
	bindsym XF86AudioPlay exec smart-playerctl play-pause
	bindsym XF86AudioPause exec smart-playerctl play-pause
	bindsym XF86AudioNext exec smart-playerctl next
	bindsym XF86AudioPrev exec smart-playerctl previous
	bindsym $mod+Shift+Return exec konsole
	bindsym $mod+Return exec kitty
        bindsym $mod+F12 mode "default"
}
bindsym $mod+F12 mode "Passthrough"

